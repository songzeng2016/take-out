/* components/helper/helper.wxss */
.helper, .button {
  display: flex;
  align-items: center;
}

.helper {
  position: fixed;
  left: 0;
  bottom: 56rpx;
  justify-content: flex-end;
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
}

.button {
  justify-content: center;
  width: 160rpx;
  height: 50rpx;
  margin-right: 30rpx;
  border: 2rpx solid #CECECE;
  border-radius: 6rpx;
  color: #666666;
  font-size: 24rpx;
}