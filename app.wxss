/**app.wxss**/

page {
  background-color: #F1F6FA;
}

.hover {
  background-color: rgba(0 ,0, 0, 0.1);
  opacity: 0.7;
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-top: 2rpx solid #ececec;
}

.tab {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab-text {
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 26rpx;
  border-bottom: 8rpx solid transparent;
}

.tab-text.active {
  border-bottom-color: #0287FF;
}