/* pages/payment/payment.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  color: #333333;
  font-size: 26rpx;
}

.body {
  flex: 1;
  /* padding-bottom: 30rpx; */
  overflow: auto;
}

.footer {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 328rpx;
  padding: 0 32rpx;
  background-color: #ffffff;
  border-top: 2rpx solid #E2E2E2;
}

.footer-price-desc {
  color: #333333;
  font-size: 28rpx;
}

.footer-price {
  color: #0287FF;
  font-size: 48rpx;
}

.footer-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 96rpx;
  margin: 24rpx 0 14rpx 0;
  background-color: #0287FF;
  border-radius: 12rpx;
  color: #FFFFFF;
}

.footer-tips {
  margin-top: 6rpx;
  color: #0287FF;
  font-size: 24rpx;
}

.fail-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #666666;
  font-size: 26rpx;
}

.net-broken {
  width: 320rpx;
  height: 370rpx;
  margin-bottom: 40rpx;
}