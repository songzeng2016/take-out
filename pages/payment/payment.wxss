/* pages/payment/payment.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  background-color: #f7f4f2;
  color: #333333;
  font-size: 26rpx;
}

.body {
  flex: 1;
  padding-bottom: 30rpx;
  overflow: auto;
}

.footer {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 344rpx;
  padding-right: 32rpx;
  background-color: #E2E2E2;
}

.footer-price {
  color: #F36F52;
  font-size: 48rpx;
}

.footer-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 96rpx;
  margin: 32rpx 0 14rpx 0;
  background-color: #F36F52;
  border-radius: 12rpx;
  color: #FFFFFF;
}

.footer-tips {
  color: #999999;
  font-size: 24rpx;
}

.confirm-title {
  margin: 28rpx;
  font-size: 30rpx;
  text-align: center;
}

.room-input {
  flex: 1;
  padding-left: 30rpx;
  text-align: center;
}

.pencil-icon {
  width: 30rpx;
  height: 34rpx;
}

.coupon-icon {
  width: 48rpx;
  height: 48rpx;
}

.card {
  padding-left: 32rpx;
  background-color: #ffffff;
}

.detail-title {
  margin: 32rpx 0 14rpx 32rpx;
}

.goods-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 94rpx;
  padding-right: 32rpx;
  border-bottom: 2rpx solid #EEEBE8;
}

.goods-list:last-child {
  border-bottom: none;
}

.coupon-list {
  margin-top: 34rpx;
  align-items: center;
  color: #F36F52;
}

.textarea {
  width: 100%;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
}