/* pages/order/order.wxss */

page {
  padding: 80rpx 0 16rpx 0;
}

.loading-tip-nomore {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 28rpx;
  color: #808080;
  text-align: center;
  background-color: #F6F6F6;
  position: relative;
}
.loading-tip-nomore > text {
  width: 240rpx;
  display: inline-block;
  opacity: 0.5;
}
.loading-tip-nomore::before {
  content: '';
  width: 168rpx;
  height: 2rpx;
  display: inline-block;
  background-color: #E3E3E3;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -288rpx;
}
.loading-tip-nomore::after {
  content: '';
  width: 168rpx;
  height: 2rpx;
  display: inline-block;
  background-color: #E3E3E3;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: 120rpx;
}