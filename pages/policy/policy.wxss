/* pages/policy/policy.wxss */
.policy-list {
  margin-top: 38rpx;
  padding: 12rpx 32rpx;
  background-color: #ffffff;
}

.policy-list-item {
  display: flex;
  margin: 38rpx 0;
}

.policy-index {
  flex-shrink: 0;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
  background-color: #D8E1E8;
  color: #33476E;
  font-size: 26rpx;
}

.policy-text {
  margin-left: 36rpx;
  color: #666666;
  font-size: 28rpx;
  line-height: 44rpx;
}

.tips {
  margin-top: 32rpx;
  text-align: center;
  color: #999999;
  font-size: 30rpx;
}