/* pages/user/user.wxss */

.user-info, .nav-list, .nav-list-left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  flex-direction: column;
  padding: 64rpx 0;
}

.user-avatar {
  width: 226rpx;
  height: 226rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-nickname {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333333;
}

.info-box {
  display: flex;
  height: 160rpx;
  margin-bottom: 32rpx;
  background-color: #ffffff;
}

.info-box > navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #0287FF;
  font-size: 28rpx;
}

.info-box > navigator:first-child {
  border-right: 2rpx solid #D2DDE6;
}

.info-number {
  font-size: 48rpx;
}

.info-desc {
  margin-top: 6rpx;
  color: #666666;
  font-size: 24rpx;
}

.nav-list-container {
  background-color: #ffffff;
}

.nav-list {
  height: 146rpx;
  margin-left: 48rpx;
  padding-right: 58rpx;
  border-bottom: 2rpx solid #EEEBE8;
}

.nav-list-container > navigator:last-child > .nav-list {
  border-bottom: none;
}

.nav-list-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.nav-list-text {
  font-size: 26rpx;
  color: #333333;
}

.nav-list-arrow {
  width: 16rpx;
  height: 28rpx;
}